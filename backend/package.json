{
  "name": "@etrax/backend",
  "version": "1.0.0",
  "description": "ETrax Backend API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/tests/**/*.test.ts --exclude src/tests/integration/**",
    "test:integration": "vitest run src/tests/integration/**/*.test.ts",
    "test:setup": "npm run db:test:setup",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:test:setup": "DATABASE_URL=$DATABASE_TEST_URL prisma migrate reset --force --skip-seed && DATABASE_URL=$DATABASE_TEST_URL prisma migrate deploy",
    "db:test:reset": "DATABASE_URL=$DATABASE_TEST_URL prisma migrate reset --force --skip-seed",
    "db:seed": "tsx src/database/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "compression": "^1.7.5",
    "express-rate-limit": "^7.4.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.24.1",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.4",
    "sharp": "^0.33.5",
    "winston": "^3.17.0",
    "puppeteer": "^23.10.4",
    "cheerio": "^1.0.0",
    "jsdom": "^25.0.1",
    "redis": "^4.7.0",
    "dotenv": "^16.4.7",
    "express-async-errors": "^3.1.1",
    "uuid": "^11.0.5",
    "node-cron": "^3.0.3",
    "date-fns": "^4.1.0",
    "archiver": "^7.0.1",
    "nodemailer": "^6.9.17",
    "twilio": "^5.4.0",
    "socket.io": "^4.8.1",
    "bull": "^4.16.3",
    "ioredis": "^5.4.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.19",
    "@types/jsdom": "^21.1.7",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "prisma": "^6.2.1",
    "vitest": "^2.1.5",
    "supertest": "^7.0.0",
    "@vitest/coverage-v8": "^2.1.5",
    "eslint": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0"
  },
  "engines": {
    "node": ">=23.0.0"
  }
}