# ETrax Backend Environment Configuration
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development
PORT=8080

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/etrax_dev"
DATABASE_TEST_URL="postgresql://username:password@localhost:5432/etrax_test"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# OAuth2 Providers
# Google OAuth2 (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth2 (https://portal.azure.com/)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# GitHub OAuth2 (https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration (SendGrid, SES, SMTP)
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@etrax.app
EMAIL_FROM_NAME=ETrax

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SendGrid Configuration (Alternative)
# SENDGRID_API_KEY=your-sendgrid-api-key

# AWS SES Configuration (Alternative)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# QR Code Configuration
QR_CODE_BASE_URL=https://etrax.app/qr
QR_CODE_SIZE=256

# Voice Recognition Configuration
VOICE_RECOGNITION_ENABLED=false
VOICE_RECOGNITION_API_KEY=your-api-key
VOICE_RECOGNITION_LANGUAGE=en-US

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key
GOOGLE_ANALYTICS_ID=your-ga-id

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Feature Flags
FEATURE_OAUTH2_ENABLED=true
FEATURE_SAML_ENABLED=true
FEATURE_MFA_ENABLED=false
FEATURE_VOICE_COMMANDS=false
FEATURE_OFFLINE_MODE=false

# API Keys for External Services
WEATHER_API_KEY=your-weather-api-key
MAPS_API_KEY=your-google-maps-key
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Development Tools
PRISMA_STUDIO_PORT=5555
DEBUG=false

# Production Server Configuration (Plesk)
PRODUCTION_URL=https://etrax.app
PRODUCTION_API_URL=https://etrax.app/api
CDN_URL=https://cdn.etrax.app