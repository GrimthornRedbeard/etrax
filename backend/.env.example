# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://etrax_user:password@localhost:5432/etrax_dev?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Frontend
FRONTEND_URL="http://localhost:5173"

# Email (Optional - for notifications)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""

# SMS (Optional - Twilio for notifications)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# File Upload
UPLOAD_MAX_SIZE="10485760"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp"

# QR Code Settings
QR_CODE_ERROR_CORRECTION="M"
QR_CODE_SIZE="200"

# Voice Processing (Optional)
VOICE_API_KEY=""
VOICE_MODEL="base"

# Puppeteer (for school website scanning)
PUPPETEER_HEADLESS="true"
PUPPETEER_TIMEOUT="30000"

# Security
BCRYPT_ROUNDS="12"
RATE_LIMIT_WINDOW="900000"
RATE_LIMIT_MAX="1000"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Deployment (Production only)
DEPLOY_KEY_PATH=""
DEPLOY_HOST=""
DEPLOY_USER=""
DEPLOY_PATH=""