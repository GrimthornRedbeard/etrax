# Environment
VITE_NODE_ENV=development

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_WS_URL=ws://localhost:3000

# App Configuration
VITE_APP_NAME=ETrax
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Sports Equipment Inventory Management"

# PWA Configuration
VITE_PWA_ENABLED=true
VITE_PWA_CACHE_SIZE=50

# QR Code Configuration
VITE_QR_CODE_SIZE=200
VITE_QR_CODE_ERROR_CORRECTION=M

# Voice Recognition
VITE_VOICE_ENABLED=true
VITE_VOICE_LANGUAGE=en-US

# Camera/Scanner
VITE_CAMERA_ENABLED=true
VITE_CAMERA_FACING_MODE=environment

# Offline Configuration
VITE_OFFLINE_ENABLED=true
VITE_SYNC_INTERVAL=30000

# Analytics (Optional)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=""

# Development
VITE_SHOW_DEV_TOOLS=true
VITE_MOCK_API=false