# ===========================================
# ETrax Environment Configuration Template
# ===========================================

# Environment Type
NODE_ENV=development

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL="postgresql://etrax_user:password@localhost:5432/etrax_dev?schema=public"

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# ===========================================
# Application URLs
# ===========================================
FRONTEND_URL="http://localhost:5173"
BACKEND_URL="http://localhost:3000"

# ===========================================
# Email Configuration (Optional)
# ===========================================
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@etrax.app"

# ===========================================
# SMS Configuration (Twilio - Optional)
# ===========================================
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# ===========================================
# File Upload Configuration
# ===========================================
UPLOAD_MAX_SIZE="10485760"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp"
UPLOAD_PATH="/uploads"

# ===========================================
# QR Code Configuration
# ===========================================
QR_CODE_ERROR_CORRECTION="M"
QR_CODE_SIZE="200"
QR_CODE_MARGIN="4"

# ===========================================
# Voice Processing (Optional)
# ===========================================
VOICE_API_KEY=""
VOICE_MODEL="base"
VOICE_LANGUAGE="en-US"

# ===========================================
# Puppeteer Configuration (School Website Scanning)
# ===========================================
PUPPETEER_HEADLESS="true"
PUPPETEER_TIMEOUT="30000"

# ===========================================
# Security Configuration
# ===========================================
BCRYPT_ROUNDS="12"
RATE_LIMIT_WINDOW="900000"
RATE_LIMIT_MAX="1000"

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL="info"
LOG_FORMAT="json"

# ===========================================
# Production Server Configuration
# ===========================================
DEPLOY_HOST="74.208.111.202"
DEPLOY_USER="etrax"
DEPLOY_PATH="/var/www/vhosts/etrax/etrax/"
DEPLOY_KEY_PATH="~/.ssh/etrax_ed25519"

# ===========================================
# Production Database Configuration
# ===========================================
PROD_DATABASE_URL="postgresql://etrax_user:EtraX_2025_Secure!@localhost:5432/etrax_prod?schema=public"

# ===========================================
# SSL Configuration (Production)
# ===========================================
SSL_ENABLED="true"
SSL_CERT_PATH="/etc/letsencrypt/live/etrax.app/fullchain.pem"
SSL_KEY_PATH="/etc/letsencrypt/live/etrax.app/privkey.pem"

# ===========================================
# Analytics (Optional)
# ===========================================
ANALYTICS_ENABLED="false"
ANALYTICS_ID=""

# ===========================================
# Feature Flags
# ===========================================
VOICE_COMMANDS_ENABLED="true"
PWA_ENABLED="true"
OFFLINE_ENABLED="true"
BULK_OPERATIONS_ENABLED="true"
SCHOOL_ONBOARDING_ENABLED="true"

# ===========================================
# Development Tools
# ===========================================
DEBUG="false"
SEED_DATABASE="true"
MOCK_EXTERNAL_APIs="false"